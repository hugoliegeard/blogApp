{% extends 'base.html.twig' %}

{% block title %}Nos catégories de produits{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="display-3 mb-5">Liste les catégories</h1>
            {% for category in categories %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}">
                                Voir ce produit
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    Pas de catégorie pour le moment.
                </div>
            {% endfor %}
        </div>
        <div class="row mt-5">
            <div class="col">
                <a class="btn btn-primary" href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
            </div>
        </div>
    </div>
{% endblock %}
